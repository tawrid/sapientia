{
    "version": 2,
    "builds": [
      {
        "src": "index.js",  // Entry point of your application
        "use": "@vercel/node"  // Specify that you're using a Node.js runtime
      }
    ],
    "routes": [
      {
        "src": "/(.*)",  // Catch all route
        "dest": "index.js"  // Redirect to your Node.js entry point
      }
    ],
    "env": {
      "OPENCAGE_API_KEY": "@opencage_api_key",
      "IPINFO_TOKEN": "@ipinfo_token",
      "SPECIAL_ID": "@special_id"
    },
    "functions": {
      "api/**/*.js": {
        "memory": 1024,
        "maxDuration": 10
      }
    }
  }
  